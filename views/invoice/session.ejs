<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/theme.css" rel="stylesheet">
  <title>Invoice</title>
  <style>
    body {
      background-color: #111213;
      color: #fff;
      font-family: 'Montserrat', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    .card-frosted {
      background: rgba(255,255,255,0.05);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 0.8rem;
      -webkit-backdrop-filter: blur(12px);
      backdrop-filter: blur(12px);
      box-shadow: 0 12px 34px rgba(0,0,0,0.45);
      padding: 1.25rem;
      color: #fff;
    }
    .muted { color: rgba(255,255,255,0.65); }
    .divider { border-top: 1px solid rgba(255,255,255,0.12); }
  </style>
</head>
<body class="theme-gradient d-flex flex-column min-vh-100">
  <main class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <div>
        <h3 class="mb-1">Invoice</h3>
        <div class="muted">Thank you for your purchase.</div>
      </div>
      <a href="/orders" class="btn btn-outline-light">View Orders</a>
    </div>

    <div class="card-frosted mb-3">
      <div class="d-flex flex-wrap justify-content-between align-items-center">
        <div>
          <div class="muted">Order ID</div>
          <div class="fw-semibold">#<%= order?.id || order?.orderId || 'N/A' %></div>
        </div>
        <div class="text-end">
          <div class="muted">Payment Method</div>
          <div class="fw-semibold"><%= paymentInfo?.method || 'N/A' %></div>
        </div>
      </div>
      <div class="divider my-3"></div>
      <div class="row g-3">
        <div class="col-md-6">
          <div class="muted">Customer</div>
          <div class="fw-semibold"><%= user?.username || 'Guest' %></div>
          <div class="muted small"><%= user?.email || '' %></div>
        </div>
        <div class="col-md-6 text-md-end">
          <div class="muted">Delivery Address</div>
          <div class="fw-semibold"><%= order?.address || user?.address || 'N/A' %></div>
        </div>
      </div>
    </div>

    <div class="card-frosted mb-3">
      <h5 class="mb-3">Items</h5>
      <% if (items && items.length) { %>
        <% items.forEach(item => { %>
          <div class="d-flex align-items-center justify-content-between py-2 divider">
            <div class="d-flex align-items-center">
              <img src="/images/<%= item.image %>" alt="<%= item.productName %>" style="width:52px;height:52px;object-fit:cover;border-radius:0.5rem;border:1px solid rgba(255,255,255,0.08);" class="me-3">
              <div>
                <div class="fw-semibold"><%= item.productName %></div>
                <div class="muted small">Qty: <%= item.quantity %></div>
              </div>
            </div>
            <div class="fw-semibold">$<%= (Number(item.price) * Number(item.quantity)).toFixed(2) %></div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="muted">No items found.</div>
      <% } %>
    </div>

    <div class="card-frosted">
      <div class="d-flex justify-content-between">
        <span class="muted">Subtotal</span>
        <span>$<%= (breakdown?.subtotal ?? 0).toFixed(2) %></span>
      </div>
      <div class="d-flex justify-content-between">
        <span class="muted">Promo</span>
        <span>-$<%= (breakdown?.promoAmount ?? 0).toFixed(2) %></span>
      </div>
      <div class="d-flex justify-content-between">
        <span class="muted">GST</span>
        <span>$<%= (breakdown?.gst ?? 0).toFixed(2) %></span>
      </div>
      <div class="d-flex justify-content-between">
        <span class="muted">Delivery</span>
        <span>$<%= (breakdown?.deliveryFee ?? 0).toFixed(2) %></span>
      </div>
      <div class="divider my-2"></div>
      <div class="d-flex justify-content-between">
        <span class="fw-semibold">Total</span>
        <span class="fw-bold">$<%= (breakdown?.total ?? order?.total ?? 0).toFixed(2) %></span>
      </div>
    </div>
  </main>
</body>
</html>
