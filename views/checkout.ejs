              <span class="fw-bold text-white-50">Total Due Today</span>
              <span class="fs-5 fw-bold">$<%= payableTotal.toFixed(2) %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card-frosted">
          <h5 class="fw-bold mb-3">Confirm & Place Order</h5>
          <div class="mb-3">
            <form method="POST" action="/checkout/promo" class="d-flex gap-2">
              <input type="text" name="promoCode" class="form-control input-ghost" placeholder="Promo code" value="<%= promoApplied ? promoApplied.code : '' %>">
              <button type="submit" class="btn btn-outline-light btn-sm">Apply</button>
            </form>
            <% if (promoApplied) { %>
