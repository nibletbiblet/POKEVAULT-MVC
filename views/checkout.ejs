<body class="theme-gradient d-flex flex-column min-vh-100">
  <% 
    const localSubtotal = typeof subtotal !== 'undefined' ? subtotal : (cart || []).reduce((sum, item) => sum + item.price * item.quantity, 0);
    const gstRateLocal = typeof gstRate !== 'undefined' ? gstRate : 0.09;
    const deliveryRateLocal = typeof deliveryRate !== 'undefined' ? deliveryRate : 0.15;
    const localDiscount = typeof discount !== 'undefined' ? discount : 0;
    const discountedSubtotal = Math.max(0, localSubtotal - localDiscount);
    const localGst = typeof gst !== 'undefined' ? gst : (discountedSubtotal * gstRateLocal);
    const localDelivery = typeof deliveryFee !== 'undefined' ? deliveryFee : (discountedSubtotal * deliveryRateLocal);
    const localTotal = typeof total !== 'undefined' ? total : (discountedSubtotal + localGst + localDelivery);
    const coinsBalanceLocal = typeof coinsBalance !== 'undefined' ? Number(coinsBalance) : 0;
    const coinsAppliedLocal = typeof coinsApplied !== 'undefined' ? Number(coinsApplied) : 0;
    const payableTotal = Math.max(0, localTotal - coinsAppliedLocal);
    const itemCount = (cart || []).reduce((sum, item) => sum + item.quantity, 0);
  %>
