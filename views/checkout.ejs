  <script>
    (function() {
      const paymentRadios = Array.from(document.querySelectorAll('input[name="paymentMethod"]'));
      const netsSection = document.getElementById('nets-section');
      const paypalSection = document.getElementById('paypal-section');
      const walletSection = document.getElementById('wallet-section');
      const placeOrderBtn = document.getElementById('placeOrderBtn');

      const cardInputs = [
        document.querySelector('input[name="cardName"]'),
        document.getElementById('cardNumber'),
        document.getElementById('cardExpiry'),
        document.getElementById('cardCvv')
      ].filter(Boolean);

      const setCardFieldsVisible = (visible) => {
        const sections = [
          document.getElementById('card-fields'),
          document.getElementById('card-number-field'),
          document.getElementById('card-extra-fields')
        ];
        sections.forEach((el) => {
          if (!el) return;
          el.style.display = visible ? '' : 'none';
        });
        cardInputs.forEach((input) => {
          input.disabled = !visible;
          if (!visible) input.value = '';
        });
      };

      const updatePaymentUI = () => {
        const selected = paymentRadios.find(radio => radio.checked);
        const isNets = selected && selected.value === 'nets';
        const isPaypal = selected && selected.value === 'paypal';
        const isWallet = selected && selected.value === 'wallet';
        const isCard = selected && selected.value === 'card';
        const showPlaceOrder = selected && (selected.value === 'card' || selected.value === 'cash');
        if (netsSection) netsSection.style.display = isNets ? 'block' : 'none';
        if (paypalSection) paypalSection.style.display = isPaypal ? 'block' : 'none';
        if (walletSection) walletSection.style.display = isWallet ? 'block' : 'none';
        if (placeOrderBtn) placeOrderBtn.style.display = showPlaceOrder ? '' : 'none';
        setCardFieldsVisible(isCard);
      };

      paymentRadios.forEach(radio => {
        radio.addEventListener('change', updatePaymentUI);
      });
      updatePaymentUI();

      const cardNumberInput = document.getElementById('cardNumber');
      const expiryInput = document.getElementById('cardExpiry');
      const cvvInput = document.getElementById('cardCvv');
      const cardToggle = document.getElementById('toggleCardNumber');
      const cvvToggle = document.getElementById('toggleCvv');

      const onlyDigits = (value) => value.replace(/\D/g, '');
      const formatCardNumber = (value) => {
        const digits = onlyDigits(value).slice(0, 19);
        return digits.replace(/(.{4})/g, '$1 ').trim();
      };
      const formatExpiry = (value) => {
        const digits = onlyDigits(value).slice(0, 4);
        if (digits.length <= 2) return digits;
        return `${digits.slice(0, 2)}/${digits.slice(2)}`;
      };
      const formatCvv = (value) => onlyDigits(value).slice(0, 4);

      if (cardNumberInput) {
        cardNumberInput.addEventListener('input', (event) => {
          event.target.value = formatCardNumber(event.target.value);
        });
      }
      if (expiryInput) {
        expiryInput.addEventListener('input', (event) => {
          event.target.value = formatExpiry(event.target.value);
        });
      }
      if (cvvInput) {
        cvvInput.addEventListener('input', (event) => {
          event.target.value = formatCvv(event.target.value);
        });
      }

      const attachToggle = (input, button, label) => {
        if (!input || !button) return;
        button.addEventListener('click', () => {
          const showing = input.type === 'password';
          input.type = showing ? 'text' : 'password';
          button.setAttribute('aria-pressed', showing ? 'true' : 'false');
          button.setAttribute('aria-label', `${showing ? 'Hide' : 'Show'} ${label}`);
          const labelEl = button.querySelector('.toggle-label');
          if (labelEl) labelEl.textContent = showing ? 'Hide' : 'Show';
        });
      };

      attachToggle(cardNumberInput, cardToggle, 'card number');
      attachToggle(cvvInput, cvvToggle, 'CVV');
    })();
  </script>
  <script>
    if (window.paypal) {
      paypal.Buttons({
        createOrder() {
          return fetch('/api/paypal/create-order', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              amount: "<%= payableTotal.toFixed(2) %>"
            })
          })
            .then((res) => res.json())
            .then((data) => {
              if (data.error) throw new Error(data.error);
              return data.id;
            });
        },
        onApprove(data) {
          return fetch('/api/paypal/capture-order', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              orderID: data.orderID
            })
          }).then((res) => res.json()).then((data) => {
            if (!data.success) throw new Error(data.error || 'Payment failed');
            if (data.redirectUrl) {
              window.location.href = data.redirectUrl;
              return;
            }
            window.location.href = `/orders/${data.orderId}`;
          });
        }
      }).render('#paypal-button-container');
    }
  </script>
</body>
