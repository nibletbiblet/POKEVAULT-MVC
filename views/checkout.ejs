  <script>
    (function() {
      const paymentRadios = Array.from(document.querySelectorAll('input[name="paymentMethod"]'));
      const netsSection = document.getElementById('nets-section');
      const paypalSection = document.getElementById('paypal-section');
      const stripeSection = document.getElementById('stripe-section');
      const walletSection = document.getElementById('wallet-section');
      const placeOrderBtn = document.getElementById('placeOrderBtn');
      const stripeCheckoutBtn = document.getElementById('stripeCheckoutBtn');
      const addressInput = document.querySelector('textarea[name="address"]');

      const updatePaymentUI = () => {
        const selected = paymentRadios.find(radio => radio.checked);
        const isNets = selected && selected.value === 'nets';
        const isPaypal = selected && selected.value === 'paypal';
        const isStripe = selected && selected.value === 'stripe';
        const isWallet = selected && selected.value === 'wallet';
        const showPlaceOrder = selected && selected.value === 'cash';
        if (netsSection) netsSection.style.display = isNets ? 'block' : 'none';
        if (paypalSection) paypalSection.style.display = isPaypal ? 'block' : 'none';
        if (stripeSection) stripeSection.style.display = isStripe ? 'block' : 'none';
        if (walletSection) walletSection.style.display = isWallet ? 'block' : 'none';
        if (placeOrderBtn) placeOrderBtn.style.display = showPlaceOrder ? '' : 'none';
      };

      paymentRadios.forEach(radio => {
        radio.addEventListener('change', updatePaymentUI);
      });
      updatePaymentUI();

      if (stripeCheckoutBtn) {
        stripeCheckoutBtn.addEventListener('click', async () => {
          stripeCheckoutBtn.disabled = true;
          stripeCheckoutBtn.textContent = 'Redirecting...';
          try {
            const payload = { address: addressInput ? addressInput.value : '' };
            const res = await fetch('/api/stripe/create-checkout-session', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(payload)
            });
            const data = await res.json().catch(() => ({}));
            if (!res.ok || !data.url) {
              throw new Error(data.error || 'Unable to start Stripe checkout.');
            }
            window.location.href = data.url;
          } catch (err) {
            alert(err.message || 'Stripe checkout failed.');
            stripeCheckoutBtn.disabled = false;
            stripeCheckoutBtn.textContent = 'Pay with Stripe';
          }
        });
      }
    })();
  </script>
  <script>
    if (window.paypal) {
      paypal.Buttons({
        createOrder() {
          return fetch('/api/paypal/create-order', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              amount: "<%= payableTotal.toFixed(2) %>"
            })
          })
            .then((res) => res.json())
            .then((data) => {
              if (data.error) throw new Error(data.error);
              return data.id;
            });
        },
        onApprove(data) {
          return fetch('/api/paypal/capture-order', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              orderID: data.orderID
            })
          }).then((res) => res.json()).then((data) => {
            if (!data.success) throw new Error(data.error || 'Payment failed');
            if (data.redirectUrl) {
              window.location.href = data.redirectUrl;
              return;
            }
            window.location.href = `/orders/${data.orderId}`;
          });
        }
      }).render('#paypal-button-container');
    }
  </script>
