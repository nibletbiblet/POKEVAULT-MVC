  <main class="container flex-grow-1 py-4">
    <div class="row g-3">
      <div class="col-lg-8">
        <div class="card-frosted h-100">
          <h4 class="mb-3 fw-bold">Order Summary</h4>
          <% if (messages && messages.length) { %>
            <div class="alert alert-danger py-2"><%= messages[0] %></div>
          <% } %>
          <% if (promoApplied) { %>
            <div class="alert alert-success py-2">Promo applied: <%= promoApplied.code %> (-$<%= promoApplied.amount.toFixed(2) %>)</div>
          <% } %>
          <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <span class="summary-chip">Items <strong><%= itemCount %></strong></span>
            <span class="summary-chip">GST <strong>$<%= (gst ?? localGst).toFixed(2) %></strong></span>
            <span class="summary-chip">Delivery <strong>$<%= (deliveryFee ?? localDelivery).toFixed(2) %></strong></span>
            <% if (localDiscount > 0) { %>
              <span class="summary-chip text-success">Promo -$<%= localDiscount.toFixed(2) %></span>
            <% } %>
            <% if (coinsAppliedLocal > 0) { %>
              <span class="summary-chip text-success">Coins -$<%= coinsAppliedLocal.toFixed(2) %></span>
            <% } %>
          </div>
          <% cart.forEach(item => { %>
            <div class="d-flex align-items-center justify-content-between py-2 border-bottom border-secondary border-opacity-25">
              <div class="d-flex align-items-center">
                <img src="/images/<%= item.image %>" alt="<%= item.productName %>" style="width:64px; height:64px; object-fit:cover; border-radius:0.5rem; border:1px solid rgba(255,255,255,0.08);" class="me-3">
                <div>
                  <div class="fw-bold"><%= item.productName %></div>
                  <small class="text-white-50">Qty: <%= item.quantity %> ? $<%= item.price.toFixed(2) %> each</small>
                  <% if (item.rarity || item.category) { %><div class="text-white-50"><small><%= item.rarity || item.category %></small></div><% } %>
                </div>
              </div>
              <div class="fw-semibold">$<%= (item.price * item.quantity).toFixed(2) %></div>
            </div>
          <% }); %>
          <div class="breakdown-box mt-3">
            <div class="d-flex justify-content-between align-items-center">
              <span class="fw-bold text-white-50">Subtotal</span>
              <span class="fw-semibold">$<%= (subtotal ?? localSubtotal).toFixed(2) %></span>
            </div>
            <% if (localDiscount > 0) { %>
              <div class="d-flex justify-content-between align-items-center">
                <span class="text-success">Promo applied</span>
                <span class="text-success">- $<%= localDiscount.toFixed(2) %></span>
              </div>
            <% } %>
            <% if (coinsAppliedLocal > 0) { %>
              <div class="d-flex justify-content-between align-items-center">
                <span class="text-success">Coins applied</span>
                <span class="text-success">- $<%= coinsAppliedLocal.toFixed(2) %></span>
              </div>
            <% } %>
            <div class="d-flex justify-content-between align-items-center">
              <span class="text-white-50">GST (<%= Math.round(gstRateLocal * 100) %>%)</span>
              <span>$<%= (gst ?? localGst).toFixed(2) %></span>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <span class="text-white-50">Delivery Fee (<%= Math.round(deliveryRateLocal * 100) %>%)</span>
              <span>$<%= (deliveryFee ?? localDelivery).toFixed(2) %></span>
            </div>
