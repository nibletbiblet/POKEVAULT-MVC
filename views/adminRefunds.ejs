<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/theme.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Admin - Refunds</title>
  <style>
    .custom-navbar { background-color:transparent !important; padding-top:1.05rem; padding-bottom:1.05rem; min-height:80px; z-index:1030; box-shadow:none; }
    .custom-navbar .navbar-brand { font-weight:700; letter-spacing:-0.01em; }
    .brand-logo { font-family:'Montserrat',system-ui,sans-serif; display:inline-flex; flex-direction:column; text-align:center; text-decoration:none; line-height:1.05; padding-left:0.1rem; }
    .brand-main { font-size:1.45rem; font-weight:700; letter-spacing:0.33em; text-transform:uppercase; color:#ffffff; }
    .brand-sub { font-size:0.68rem; font-weight:500; letter-spacing:0.28em; text-transform:uppercase; color:rgba(255,255,255,0.75); margin-top:0.15rem; }
    .card-frosted { background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); border-radius: 1rem; -webkit-backdrop-filter: blur(14px); backdrop-filter: blur(14px); box-shadow: 0 18px 48px rgba(0,0,0,0.55); padding: 1.25rem; }
    .badge-soft { background: rgba(255,255,255,0.08); border: 1px solid rgba(255,255,255,0.12); color: #fff; border-radius: 999px; padding: 0.3rem 0.65rem; font-weight: 700; letter-spacing: 0.02em; }
    .refund-card { background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.12); border-radius: 0.8rem; padding: 1rem; }
    .alert.alert-warning { background: rgba(255, 193, 7, 0.15); color: #fff; border-color: rgba(255, 193, 7, 0.35); }
    .alert.alert-warning li { color: rgba(255,255,255,0.9); }
  </style>
</head>
<body class="theme-gradient d-flex flex-column min-vh-100">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark custom-navbar">
    <div class="container-fluid">
      <a class="navbar-brand brand-logo" href="/">
        <span class="brand-main">PokeVault</span>
        <span class="brand-sub">SINGAPORE</span>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item d-flex align-items-center me-3"><span class="text-light small">Signed in as <strong><%= user.username %></strong></span></li>
          <li class="nav-item ms-2"><a class="btn btn-outline-light btn-sm btn-cta btn-minimal" href="/admin/dashboard">Dashboard</a></li>
          <li class="nav-item ms-2"><a class="btn btn-outline-light btn-sm btn-cta btn-minimal" href="/admin/orders-status">Order Status</a></li>
          <li class="nav-item ms-2"><a class="btn btn-outline-light btn-sm btn-cta btn-minimal" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container flex-grow-1 py-4">
    <div class="card-frosted">
      <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
        <div>
          <h4 class="fw-bold mb-1">Refund Requests</h4>
          <small class="text-white-50">Approve or reject refund requests.</small>
        </div>
        <div class="text-white-50 small">Refund History: <a class="text-white" href="/admin/audit-log">View Audit Log</a></div>
      </div>

      <% if (flaggedUsers && flaggedUsers.length) { %>
        <div class="alert alert-warning" role="alert">
          <strong>Multiple pending refunds detected:</strong>
          <ul class="mb-0 mt-2">
            <% flaggedUsers.forEach(u => { %>
              <li><%= u.username %> <%= u.email ? '(' + u.email + ')' : '' %> — <%= u.count %> pending requests</li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <% if (!refundRequests || !refundRequests.length) { %>
        <div class="text-white-50">No pending refund requests.</div>
      <% } else { %>
        <div class="d-grid gap-3">
          <% refundRequests.forEach(r => { %>
            <div class="refund-card">
              <div class="d-flex flex-wrap justify-content-between align-items-start gap-3">
                <div>
                  <div class="fw-bold">Order #<%= r.order_id %></div>
                  <div class="text-white-50 small"><%= r.username %> • <%= r.email %></div>
                  <div class="text-white-50 small mt-1">
                    <div class="d-flex flex-wrap align-items-center gap-2">
                      <span>Reason: <%= r.reason %></span>
                      <form method="POST" action="/admin/orders/<%= r.order_id %>/refund-approve">
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                      </form>
                      <form method="POST" action="/admin/orders/<%= r.order_id %>/refund-reject">
                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                      </form>
                    </div>
                  </div>
                  <div class="text-white-50 small">Description: <%= r.description || 'N/A' %></div>
                </div>
                <div class="text-end">
                  <div class="badge-soft">$<%= Number(r.total).toFixed(2) %></div>
                  <div class="mt-2">Order Status: <span class="badge-soft"><%= (r.orderStatus || '').replace('_', ' ') %></span></div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </main>
</body>
</html>
