<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/theme.css" rel="stylesheet">
  <script src="https://www.paypal.com/sdk/js?client-id=<%= process.env.PAYPAL_CLIENT_ID %>&currency=SGD"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>BNPL Setup</title>
  <style>
    body {
      background:#111213;
      color:#fff;
      font-family:'Montserrat',system-ui,-apple-system,'Segoe UI',Roboto,'Helvetica Neue',Arial,sans-serif;
      background-size:cover;
      background-repeat:no-repeat;
      background-attachment:fixed;
    }
    body::before { content:''; position:fixed; inset:0; background:rgba(0,0,0,0.45); z-index:-1; }
    .custom-navbar { background-color:transparent !important; padding-top:1.05rem; padding-bottom:1.05rem; min-height:80px; z-index:1030; box-shadow:none; }
    .card-frosted { background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); border-radius: 0.8rem; -webkit-backdrop-filter: blur(12px); backdrop-filter: blur(12px); box-shadow: 0 12px 34px rgba(0,0,0,0.45); padding: 1.25rem; color:#fff; }
    .brand-logo { font-family:'Montserrat',system-ui,sans-serif; display:inline-flex; flex-direction:column; text-align:center; text-decoration:none; line-height:1.05; padding-left:0.1rem; }
    .brand-main { font-size:1.45rem; font-weight:700; letter-spacing:0.33em; text-transform:uppercase; color:#ffffff; }
    .brand-sub { font-size:0.68rem; font-weight:500; letter-spacing:0.28em; text-transform:uppercase; color:rgba(255,255,255,0.75); margin-top:0.15rem; }
    .input-ghost { background: rgba(255,255,255,0.08); border: 1px solid rgba(255,255,255,0.12); color: #fff; }
    .input-ghost:focus { background: rgba(255,255,255,0.12); color: #fff; border-color: rgba(255,255,255,0.32); box-shadow: 0 0 0 0.2rem rgba(255,255,255,0.12); }
    .btn-cta { background:#ffffff; color:#000 !important; font-weight:600; letter-spacing:.02em; border-radius:0.45rem; border:1px solid rgba(255,255,255,0.12); padding:0.65rem 1rem; font-size:1rem; transition:160ms ease-in-out; }
    .btn-cta:hover { transform: translateY(-2px); background:#f1f1f1; }
    .summary-row { display:flex; justify-content:space-between; align-items:center; }
    .divider { border-top:1px solid rgba(255,255,255,0.12); margin:1rem 0; }
    .bank-choice { display:flex; gap:0.6rem; flex-wrap:wrap; }
    .bank-pill { border:1px solid rgba(255,255,255,0.16); background:rgba(255,255,255,0.06); border-radius:999px; padding:0.35rem 0.75rem; font-weight:600; cursor:pointer; }
    .bank-pill input { margin-right:0.35rem; }
    .modal-content.card-frosted {
      background: rgba(20, 28, 48, 0.95);
      border: 1px solid rgba(255,255,255,0.12);
      color: #fff;
    }
  </style>
</head>
<body class="theme-gradient d-flex flex-column min-vh-100">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark custom-navbar">
    <div class="container-fluid">
      <a class="navbar-brand brand-logo" href="/">
        <span class="brand-main">PokeVault</span>
        <span class="brand-sub">SINGAPORE</span>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item d-flex align-items-center me-3"><span class="text-light small">Signed in as <strong><%= user.username %></strong></span></li>
          <li class="nav-item ms-2">
            <form method="POST" action="/bnpl/card/cancel">
              <button type="submit" class="btn btn-outline-light">Cancel Setup</button>
            </form>
          </li>
          <li class="nav-item ms-2"><a class="btn btn-outline-light" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container flex-grow-1 py-4">
    <div class="row g-3">
      <div class="col-lg-7">
        <div class="card-frosted">
          <h4 class="fw-bold mb-2">BNPL Card Setup</h4>
          <p class="text-white-50">Choose a 6 or 12 month plan and set up your BNPL card.</p>
          <div class="summary-row">
            <span class="text-white-50">Plan</span>
            <strong><%= planMonths %> months</strong>
          </div>
          <div class="summary-row mt-1">
            <span class="text-white-50">Total</span>
            <strong>$<%= Number(grandTotal).toFixed(2) %></strong>
          </div>
          <div class="summary-row mt-1">
            <span class="text-white-50">Estimated per month</span>
            <strong>$<%= (Number(grandTotal) / Math.max(planMonths, 1)).toFixed(2) %></strong>
          </div>

          <div class="divider"></div>

          <% if (!bnplCard) { %>
            <h5 class="fw-semibold">Set up BNPL Card</h5>
            <% if (messages && messages.length) { %>
              <div class="alert alert-danger py-2"><%= messages[0] %></div>
            <% } %>
            <% if (success && success.length) { %>
              <div class="alert alert-success py-2"><%= success[0] %></div>
            <% } %>
            <form method="POST" action="/bnpl/card/setup" id="bnplSetupForm">
              <input type="hidden" name="planMonths" value="<%= planMonths %>">
              <input type="hidden" name="otp" id="bnplOtpInput" value="">
              <div class="mb-3">
                <label class="form-label">Choose Bank</label>
                <div class="bank-choice">
                  <label class="bank-pill">
                    <input type="radio" name="bankProvider" value="PAYPAL" required>
                    PayPal
                  </label>
                  <label class="bank-pill">
                    <input type="radio" name="bankProvider" value="STRIPE" required>
                    Stripe
                  </label>
                </div>
                <small class="text-white-50">Sandbox only â€” no real bank is contacted.</small>
              </div>
              <div class="mb-3">
                <label class="form-label">Cardholder Name</label>
                <input class="form-control input-ghost" name="cardName" required>
              </div>
              <div class="row g-2">
                <div class="col-md-7">
                  <label class="form-label">Card Number</label>
                  <input class="form-control input-ghost" name="cardNumber" placeholder="4111 1111 1111 1111" required>
                </div>
                <div class="col-md-3">
                  <label class="form-label">Expiry</label>
                  <input class="form-control input-ghost" name="cardExpiry" id="bnplExpiryInput" placeholder="12/26" maxlength="5" inputmode="numeric" pattern="\d{2}/\d{2}" required>
                </div>
                <div class="col-md-2">
                  <label class="form-label">CVV</label>
                  <input class="form-control input-ghost" name="cardCvv" placeholder="123" required>
                </div>
              </div>
              <div class="mb-3 mt-2">
                <label class="form-label">Billing Address</label>
                <input class="form-control input-ghost" name="billingAddress" required>
              </div>
              <div class="mb-3">
                <label class="form-label">2FA Code</label>
                <div class="d-flex flex-wrap gap-2 align-items-center">
                  <button type="button" class="btn btn-outline-light" id="bnplOtpOpenBtn">Request OTP</button>
                  <span class="text-white-50 small" id="bnplOtpStatus">OTP not verified</span>
                </div>
                <small class="text-white-50 d-block mt-2">Sandbox OTP will be used for verification.</small>
              </div>
              <button type="submit" class="btn btn-cta" id="bnplSaveBtn" disabled>Save BNPL Card</button>
            </form>
          <% } else { %>
            <div class="alert alert-success py-2">BNPL card is set up.</div>
            <div class="summary-row">
              <span class="text-white-50">Card</span>
              <strong>**** **** **** <%= bnplCard.last4 %> (Exp <%= bnplCard.expiry %>)</strong>
            </div>
            <div class="divider"></div>
            <form method="POST" action="/checkout/bnpl">
              <input type="hidden" name="planMonths" value="<%= planMonths %>">
              <button type="submit" class="btn btn-cta w-100">Confirm BNPL Payment</button>
            </form>
          <% } %>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="card-frosted">
          <h5 class="fw-semibold mb-3">Items</h5>
          <% cart.forEach(item => { %>
            <div class="d-flex align-items-center justify-content-between py-2 border-bottom border-secondary border-opacity-25">
              <div class="d-flex align-items-center">
                <img src="/images/<%= item.image %>" alt="<%= item.productName %>" style="width:52px; height:52px; object-fit:cover; border-radius:0.4rem; border:1px solid rgba(255,255,255,0.08);" class="me-2">
                <div>
                  <div class="fw-semibold"><%= item.productName %></div>
                  <small class="text-white-50">Qty: <%= item.quantity %> - $<%= Number(item.price).toFixed(2) %></small>
                </div>
              </div>
              <div class="fw-semibold">$<%= (Number(item.price) * item.quantity).toFixed(2) %></div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </main>

  <!-- OTP modal -->
  <div class="modal fade" id="bnplOtpModal" tabindex="-1" aria-hidden="true" data-sandbox-otp="<%= sandboxOtp %>">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content card-frosted">
        <div class="modal-header border-0">
          <h5 class="modal-title fw-semibold">OTP Verification</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p class="text-white-50 mb-3">Enter the one-time code sent by the bank to confirm this BNPL card.</p>
          <input class="form-control input-ghost" id="bnplOtpModalInput" placeholder="Enter OTP">
          <div class="text-danger small mt-2" id="bnplOtpError" style="display:none;">OTP is incorrect.</div>
        </div>
        <div class="modal-footer border-0">
          <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-cta" id="bnplOtpConfirmBtn">Confirm OTP</button>
        </div>
      </div>
    </div>
  </div>
  <!-- BNPL sandbox flow uses card + OTP only -->
  <script>
    (function () {
      const openBtn = document.getElementById('bnplOtpOpenBtn');
      const modalEl = document.getElementById('bnplOtpModal');
      const modalInput = document.getElementById('bnplOtpModalInput');
      const formOtpInput = document.getElementById('bnplOtpInput');
      const confirmBtn = document.getElementById('bnplOtpConfirmBtn');
      const form = document.getElementById('bnplSetupForm');
      const saveBtn = document.getElementById('bnplSaveBtn');
      const statusText = document.getElementById('bnplOtpStatus');
      const errorText = document.getElementById('bnplOtpError');
      if (!openBtn || !modalEl || !modalInput || !formOtpInput || !confirmBtn || !form || !saveBtn || !statusText || !errorText) return;

      const modal = new bootstrap.Modal(modalEl);

      openBtn.addEventListener('click', () => {
        modalInput.value = '';
        errorText.style.display = 'none';
        modal.show();
      });

      confirmBtn.addEventListener('click', () => {
        const entered = modalInput.value.trim();
        const expected = modalEl.getAttribute('data-sandbox-otp') || '';
        if (!entered || entered !== expected) {
          errorText.style.display = 'block';
          return;
        }
        formOtpInput.value = entered;
        saveBtn.disabled = false;
        statusText.textContent = 'OTP verified';
        openBtn.style.display = 'none';
        modal.hide();
      });
    })();
  </script>
  <script>
    (function () {
      const expiryInput = document.getElementById('bnplExpiryInput');
      if (!expiryInput) return;
      expiryInput.addEventListener('keydown', (e) => {
        if (e.key === '/' || e.key === ' ') {
          e.preventDefault();
        }
      });
      const formatExpiry = (value) => {
        const digits = value.replace(/\D/g, '').slice(0, 4);
        if (digits.length <= 2) return digits;
        return `${digits.slice(0, 2)}/${digits.slice(2)}`;
      };
      expiryInput.addEventListener('input', (e) => {
        e.target.value = formatExpiry(e.target.value);
      });
      expiryInput.addEventListener('paste', (e) => {
        e.preventDefault();
        const text = (e.clipboardData || window.clipboardData).getData('text');
        expiryInput.value = formatExpiry(text);
      });
    })();
  </script>
</body>
</html>
